generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String
  posts    Blog[]
}
 
model Blog {
  id        String   @id @default(uuid())
  authorId  Int
  title     String
  content   String
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
}